<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/menu3_main"
        android:layout_width="@dimen/dimen_133dp"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_marginRight="@dimen/dimen_51dp"
        android:layout_marginTop="@dimen/dimen_42dp"
        android:background="@drawable/menu3_bg"
        android:gravity="center|top"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_9dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/radio0"
                android:layout_width="@dimen/dimen_25dp"
                android:layout_height="@dimen/dimen_25dp"
                android:background="@drawable/xml_menu3_1"
                android:checked="true"
                android:scaleType="fitXY"
                android:src="@drawable/a_xml_menu_btn_hold" />

            <ImageView
                android:id="@+id/radio1"
                android:layout_width="@dimen/dimen_25dp"
                android:layout_height="@dimen/dimen_25dp"
                android:layout_marginLeft="@dimen/dimen_4dp"
                android:layout_marginRight="@dimen/dimen_4dp"
                android:background="@drawable/xml_menu3_2"
                android:checked="true"
                android:scaleType="fitXY"
                android:src="@drawable/a_xml_menu_btn_hold" />

            <ImageView
                android:id="@+id/radio2"
                android:layout_width="@dimen/dimen_25dp"
                android:layout_height="@dimen/dimen_25dp"
                android:background="@drawable/xml_menu3_3"
                android:checked="true"
                android:scaleType="fitXY"
                android:src="@drawable/a_xml_menu_btn_hold" />

            <ImageView
                android:id="@+id/radio3"
                android:layout_width="@dimen/dimen_25dp"
                android:layout_height="@dimen/dimen_25dp"
                android:layout_marginLeft="@dimen/dimen_4dp"
                android:background="@drawable/xml_menu3_4"
                android:checked="true"
                android:scaleType="fitXY"
                android:src="@drawable/a_xml_menu_btn_hold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>