<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/menu4_main"
        android:layout_width="@dimen/dimen_94dp"
        android:layout_height="@dimen/dimen_110dp"
        android:layout_marginRight="@dimen/dimen_38dp"
        android:layout_marginTop="@dimen/dimen_42dp"
        android:background="@drawable/menu4_bg"
        android:gravity="center|top"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_4dp"
        android:paddingLeft="@dimen/dimen_5dp"
        android:paddingRight="@dimen/dimen_5dp" >

        <com.shopivr.component.view.KeyPadCallView
            android:id="@+id/keypaddcallmenu4"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </com.shopivr.component.view.KeyPadCallView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.shopivr.component.view.custom.font.BoldButton
                android:id="@+id/menu4_call"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_13dp"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:background="@drawable/xml_sip_btn_login"
                android:text="発信"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dimen_8dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>