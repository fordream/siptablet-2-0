<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="@dimen/dimen_122dp"
        android:layout_height="@dimen/dimen_148dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="@drawable/notification_bg"
        android:gravity="center|top"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_5dp"
        android:paddingRight="@dimen/dimen_5dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_2dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:gravity="center"
            android:text="お知らせ"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dimen_7dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#939496" />

        <ListView
            android:id="@+id/notification_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="0px"
            android:fadingEdge="none"
            android:fadingEdgeLength="0dp"
            android:listSelector="@drawable/tranfer"
            android:scrollbarThumbHorizontal="@drawable/tranfer"
            android:scrollbarThumbVertical="@drawable/tranfer" >
        </ListView>
    </LinearLayout>

</LinearLayout>