<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="@dimen/dimen_84dp"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_13dp" >

            <com.shopivr.component.view.custom.font.BoldTextView
                android:id="@+id/menu4_edt"
                style="@style/edt"
                android:textSize="@dimen/dimen_7dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_13dp"
                android:gravity="center_vertical|right"
                android:paddingRight="@dimen/dimen_15dp"
                android:paddingLeft="@dimen/dimen_0dp"
                android:singleLine="true"
                android:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/menu_delete"
                android:layout_width="@dimen/dimen_7dp"
                android:layout_height="@dimen/dimen_7dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_3dp"
                android:background="@drawable/menu4_x" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_3dp"
            android:background="#e9e9e9"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="1px" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_12dp"
                android:weightSum="3" >

                <com.shopivr.component.view.custom.font.BoldButton
                    android:id="@+id/menu4_1"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/xml_sip_keypad"
                    android:text="1"
                    android:textSize="@dimen/dimen_7dp" />

                <com.shopivr.component.view.custom.font.BoldButton
                    android:id="@+id/menu4_2"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1px"
                    android:layout_marginRight="1px"
                    android:layout_weight="1"
                    android:background="@drawable/xml_sip_keypad"
                    android:text="2"
                    android:textSize="@dimen/dimen_7dp" />

                <com.shopivr.component.view.custom.font.BoldButton
                    android:id="@+id/menu4_3"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/xml_sip_keypad"
                    android:text="3"
                    android:textSize="@dimen/dimen_7dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_12dp"
                android:layout_marginBottom="1px"
                android:layout_marginTop="1px"
                android:weightSum="3" >

                <com.shopivr.component.view.custom.font.BoldButton
                    android:id="@+id/menu4_4"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/xml_sip_keypad"
                    android:text="4"
                    android:textSize="@dimen/dimen_7dp" />

                <com.shopivr.component.view.custom.font.BoldButton
                    android:id="@+id/menu4_5"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1px"
                    android:layout_marginRight="1px"
                    android:layout_weight="1"
                    android:background="@drawable/xml_sip_keypad"
                    android:text="5"
                    android:textSize="@dimen/dimen_7dp" />

                <com.shopivr.component.view.custom.font.BoldButton
                    android:id="@+id/menu4_6"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/xml_sip_keypad"
                    android:text="6"
                    android:textSize="@dimen/dimen_7dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_12dp"
                android:weightSum="3" >

                <com.shopivr.component.view.custom.font.BoldButton
                    android:id="@+id/menu4_7"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/xml_sip_keypad"
                    android:text="7"
                    android:textSize="@dimen/dimen_7dp" />

                <com.shopivr.component.view.custom.font.BoldButton
                    android:id="@+id/menu4_8"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1px"
                    android:layout_marginRight="1px"
                    android:layout_weight="1"
                    android:background="@drawable/xml_sip_keypad"
                    android:text="8"
                    android:textSize="@dimen/dimen_7dp" />

                <com.shopivr.component.view.custom.font.BoldButton
                    android:id="@+id/menu4_9"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/xml_sip_keypad"
                    android:text="9"
                    android:textSize="@dimen/dimen_7dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_12dp"
                android:layout_marginBottom="1px"
                android:layout_marginTop="1px"
                android:weightSum="3" >

                <com.shopivr.component.view.custom.font.BoldButton
                    android:id="@+id/menu4_star"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/xml_sip_keypad"
                    android:text="*"
                    android:textSize="@dimen/dimen_7dp" />

                <com.shopivr.component.view.custom.font.BoldButton
                    android:id="@+id/menu4_0"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1px"
                    android:layout_marginRight="1px"
                    android:layout_weight="1"
                    android:background="@drawable/xml_sip_keypad"
                    android:text="0"
                    android:textSize="@dimen/dimen_7dp" />

                <com.shopivr.component.view.custom.font.BoldButton
                    android:id="@+id/menu4_sharp"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/xml_sip_keypad"
                    android:text="#"
                    android:textSize="@dimen/dimen_7dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/keypadcall_control"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_12dp"
                android:weightSum="3" >

                <com.shopivr.component.view.custom.font.BoldButton
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/xml_sip_keypad"
                    android:textSize="@dimen/dimen_7dp" />

                <com.shopivr.component.view.custom.font.BoldButton
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1px"
                    android:layout_marginRight="1px"
                    android:layout_weight="1"
                    android:background="@drawable/xml_sip_keypad"
                    android:textSize="@dimen/dimen_7dp" />

                <LinearLayout
                    android:id="@+id/menu4_delete_one"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/xml_sip_keypad"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:text="delete" >

                    <ImageView
                        android:layout_width="@dimen/dimen_12dp"
                        android:layout_height="@dimen/dimen_8dp"
                        android:background="@drawable/menu4_delete_bg" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>